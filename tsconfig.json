{
  "compilerOptions": {
    "target": "es2015",
    "lib": ["dom", "esnext"],
    "outDir": "dist",
    "jsx": "react",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "types/figma.d.ts",
      "types/global.d.ts",
      "types/declaration.d.ts"
    ]
  }
}
